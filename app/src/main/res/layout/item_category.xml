<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corner_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/categoryAppCompatImageView"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/categoryAppCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/categoryAppCompatImageView"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/black"
        android:padding="@dimen/_3sdp"
        android:text="text"
        android:textSize="@dimen/_15ssp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toStartOf="@id/deletebtn"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_edit" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_delete" />

    <View
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/g_gray500"
        android:layout_below="@+id/categoryAppCompatImageView" />
</RelativeLayout>