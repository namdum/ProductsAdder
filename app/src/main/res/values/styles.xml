<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize" parent="">
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="register">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">#5A5A5A</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background_with_border</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background_with_border</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/g_blue</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/g_blue</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MediumTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:textStyle">bold</item>
    </style>
        <style name="SmallTextViewThin">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>
    <dimen name="h4TextSize">35sp</dimen>
    <dimen name="h2TextSize">15sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>


</resources>