<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/FragmentCategory">

    <fragment
        android:id="@+id/FragmentCategory"
        android:name="com.example.productsadder.CategoryFragment"
        android:label="Your Current Fragment"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_FragmentCategory_to_FragmentProducts"
            app:destination="@id/FragmentProducts" />
    </fragment>

    <fragment
        android:id="@+id/FragmentProducts"
        android:name="com.example.productsadder.ProductsFragment"
        android:label="Fragment Products"
        tools:layout="@layout/fragment_products">
        <action
            android:id="@+id/action_FragmentProducts_to_FragmentOrder"
            app:destination="@id/FragmentOrder"
            app:popUpTo="@id/FragmentCategory"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
    android:id="@+id/FragmentOrder"
    android:name="com.example.productsadder.OrderFragment"
    android:label="Fragment Products"
    tools:layout="@layout/fragment_oredr">
    <action
        android:id="@+id/action_FragmentOrder_to_FragmentProducts"
        app:destination="@id/FragmentProducts"
        app:popUpTo="@id/FragmentProducts"
        app:popUpToInclusive="true" />
</fragment>


</navigation>